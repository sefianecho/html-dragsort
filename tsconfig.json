{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "noImplicitAny": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dev", "dist"]
}
